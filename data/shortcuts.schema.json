{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "required": ["name", "shortcut", "site"],
    "properties": {
      "name": {
        "type": "string",
        "minLength": 1
      },
      "shortcut": {
        "type": "string",
        "pattern": "^@[a-z]+$"
      },
      "site": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9.-]+(/[a-zA-Z0-9._~!$&'()*+,;=:@%-]*)*$"
      }
    },
    "additionalProperties": false
  }
}

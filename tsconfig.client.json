{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": [
            "DOM",
            "ES2020"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noEmit": false,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "public",
        "rootDir": "src/client"
    },
    "include": [
        "src/client"
    ],
    "exclude": [
        "node_modules",
        "public"
    ]
}